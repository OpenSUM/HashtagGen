{
  "batch_size": 64,
  "epochs": 50,
  "encoder_seq_length": 166,
  "decoder_seq_length": 10,
  "bert_learning_rate": 1e-4,
  "other_learning_rate": 0.001,
  "theta": 0.99,

  "encoder_output_length": 11,
  "top_k": 10,
  "segment_number": 15,
  "segment_length": 10,
  "similarity_function": ["manhattan","euclidean","cos","mahalanobis"],

  "gradual_unfreezing": false,
  "discriminative_fine_tuning": false,

  "pointer_initializer": "xavier",
  "use_pointer": false,
  "coverage": false,
  "trim_attention": false,
  "align_layers": false,

  "encoder_trainable_layers": -1,
  "trainable_layers": -1,
  "embedding_trainable": true,
  "pooler_layer_trainable": true,
  "masked_layer_trainable": true,
  "attention_layer_trainable": true,

  "train_src": "./data/topic_ltp/new4_train.src.token",
  "train_dst": "./data/topic_ltp/new4_train.dst.token",
  "eval_src": "./data/topic_ltp/new4_validation.src.token",
  "eval_dst": "./data/topic_ltp/new4_validation.dst.token",
  "test_src": "./data/topic_ltp/new4_test.src.token",
  "test_dst": "./data/topic_ltp/new4_test.dst.token",
  "init_checkpoint": "./experiments2021/checkpoint_2021-05-06-23-52-29",
  "vocab_file": "./bert/topic_ltp/vocab.txt",

  "attention_probs_dropout_prob": 0.1,
